# Example environment variables (copy to .env and adjust)

# Core
PROJECT_NAME=meshviewer
ENV=development

# Web Ports
HTTP_PORT=80
# HTTPS not enabled by default; set and configure certs if needed
HTTPS_PORT=8443

# Backend / Django
DJANGO_SECRET_KEY=change-me-in-prod
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# CORS (comma-separated, no spaces)
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Database (PostgreSQL)
POSTGRES_DB=meshdb
POSTGRES_USER=meshuser
POSTGRES_PASSWORD=change-me
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Meshcore CLI integration (optional TCP ports)
MESHCORE_TCP_PORT1=7000
MESHCORE_TCP_PORT2=7001

# Meshcore WiFi target (CLI over TCP/IP)
MESHCORE_TARGET=192.168.20.160

# Internal service ports (rarely changed)
BACKEND_PORT=8000

# Serial console disabled (WiFi only)
